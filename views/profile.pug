doctype html
html
	head
		title Bloggie
	body
		a(href='/') Home
		br
		a(href='/blog') Bloggie
		br
		a(href='/logout') Log out
		//- h1 Welcome to your profile <u>#{post.user.username}</u>
		//- p <b>Name:</b> #{post.user.first} #{post.user.last}
		//- p <b>Email:</b> #{post.user.email}
		//- p <b>Username:</b> #{post.username}

		p Start blogging
		form(action='/profile', method='post', autocomplete='off')
			input(type='text', name='title', placeholder='Title')
			br
			textarea(type='text', name='body', style='width: 350px;height: 150px', placeholder='What would you like to share today?')
			br
			button(type='submit', value='Submit Message') Submit Your Blog

		h3 All your blogs
		each post in posts
			p Title: #{post.title}
			p <i>Written by: #{post.user.username}</i>
			p #{post.createdAt}



			



